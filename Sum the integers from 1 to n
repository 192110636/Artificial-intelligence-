def sum_to_n(n):
    return n * (n + 1) // 2  # Using the arithmetic formula

# Example usage
n = int(input("Enter a number: "))
print(f"The sum from 1 to {n} is {sum_to_n(n)}")


def sum_to_n(n):
    total = 0
    for i in range(1, n + 1):
        total += i
    return total

# Example usage
n = int(input("Enter a number: "))
print(f"The sum from 1 to {n} is {sum_to_n(n)}")
